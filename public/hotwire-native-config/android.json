{
  "settings": {
    "enable_debug_logging": false,
    "screenshots_enabled": false
  },
  "rules": [
    {
      "patterns": [
        "/users/sign_in",
        "/users/sign_up",
        "/users/sign_out"
      ],
      "properties": {
        "presentation": "replace",
        "context": "modal"
      }
    },
    {
      "patterns": [
        "/account/streams/.*/live",
        "/streams/.*/live",
        "/*/experiences/.*/streams/.*/live"
      ],
      "properties": {
        "presentation": "replace",
        "context": "default",
        "native_activity": "LiveStreamActivity"
      }
    },
    {
      "patterns": [
        "/account/spaces/.*/access_passes/new",
        "/*/access_passes/new",
        "/checkout"
      ],
      "properties": {
        "presentation": "modal",
        "context": "modal",
        "swipe_to_dismiss": false
      }
    },
    {
      "patterns": [
        ".*\\.(pdf|doc|docx|xls|xlsx|zip|rar)"
      ],
      "properties": {
        "presentation": "external"
      }
    },
    {
      "patterns": [
        "/account/users/edit",
        "/account/teams/.*/edit",
        "/account/spaces/.*/edit"
      ],
      "properties": {
        "presentation": "modal",
        "context": "modal",
        "swipe_to_dismiss": true
      }
    },
    {
      "patterns": [
        "/explore",
        "/",
        "/account/dashboard"
      ],
      "properties": {
        "presentation": "replace",
        "context": "default",
        "clear_snapshot_cache": true
      }
    }
  ],
  "bridges": {
    "video": {
      "enabled": true,
      "features": {
        "background_audio": true,
        "picture_in_picture": true,
        "cast": true,
        "adaptive_bitrate": true
      }
    },
    "authentication": {
      "enabled": true,
      "biometric": true,
      "credential_manager": true
    },
    "push_notifications": {
      "enabled": true,
      "permission_prompt_delay": 86400,
      "notification_channels": [
        {
          "id": "stream_notifications",
          "name": "Stream Notifications",
          "importance": "high",
          "vibration": true
        },
        {
          "id": "chat_messages",
          "name": "Chat Messages",
          "importance": "default",
          "vibration": false
        }
      ]
    },
    "sharing": {
      "enabled": true
    },
    "haptics": {
      "enabled": true
    }
  }
}