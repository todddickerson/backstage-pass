    "trix": "^2.1.15",
    "yalc": "^1.0.0-pre.53"
  },
  "scripts": {
    "heroku-postbuild": "echo 'This step prevents Heroku from trying to run `yarn build` before ruby and bundler are available. The asset pipeline will call it as part of asset precompilation.'",
    "build": "THEME=\"backstage_pass\" node esbuild.config.js",
    "build:css": "bin/link; yarn backstage_pass:build:css; yarn backstage_pass:build:mailer:css",
    "backstage_pass:build:css": "THEME=\"backstage_pass\" NODE_PATH=./node_modules tailwindcss -c tailwind.config.js -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.backstage_pass.css --postcss ./postcss.config.js",
    "backstage_pass:build:mailer:css": "THEME=\"backstage_pass\" NODE_PATH=./node_modules tailwindcss -c $(bundle exec bin/theme tailwind-mailer-config backstage_pass) -i $(bundle exec bin/theme tailwind-stylesheet backstage_pass) -o ./app/assets/builds/application.mailer.backstage_pass.css --postcss ./postcss.mailer.config.js",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "playwright:install": "playwright install"
  },
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@playwright/test": "^1.55.0"
  }
}
