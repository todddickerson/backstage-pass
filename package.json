    "@rails/actiontext": "^8.0.201",
    "@rails/activestorage": "^8.0.100",
    "@rails/request.js": "^0.0.12",
    "@redocly/cli": "^1.34.5 <2.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "cable_ready": "^5.0.6",
    "dragula": "^3.7.3",
    "esbuild": "^0.25.9",
    "glob": "^10.3.12",
