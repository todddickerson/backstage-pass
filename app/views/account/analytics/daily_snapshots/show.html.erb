<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @daily_snapshot do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @daily_snapshot %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @daily_snapshot, strategy: :label do %>
            <%= render 'shared/attributes/date', attribute: :date %>
            <%= render 'shared/attributes/belongs_to', attribute: :space %>
            <%= render 'shared/attributes/number', attribute: :total_revenue_cents %>
            <%= render 'shared/attributes/number', attribute: :purchases_count %>
            <%= render 'shared/attributes/number', attribute: :active_passes_count %>
            <%= render 'shared/attributes/number', attribute: :stream_views %>
            <%= render 'shared/attributes/number', attribute: :chat_messages %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @daily_snapshot], class: first_button_primary if can? :edit, @daily_snapshot %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @daily_snapshot], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@daily_snapshot)) } if can? :destroy, @daily_snapshot %>
          <%= link_to t('global.buttons.back'), [:account, @team, :analytics_daily_snapshots], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
