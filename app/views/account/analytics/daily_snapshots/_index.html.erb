<% daily_snapshots = daily_snapshots.accessible_by(current_ability) %>
<% team = @team %>
<% context ||= team %>
<% collection ||= :analytics_daily_snapshots %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, daily_snapshots = pagy(daily_snapshots, page_param: :daily_snapshots_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless daily_snapshots.any?}") %>
        <%= render "shared/limits/index", model: daily_snapshots.model %>
      <% end %>

      <% box.table do %>
        <% if daily_snapshots.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.date.heading') %></th>
                <th><%= t('.fields.space.heading') %></th>
                <th><%= t('.fields.total_revenue_cents.heading') %></th>
                <th><%= t('.fields.purchases_count.heading') %></th>
                <th><%= t('.fields.active_passes_count.heading') %></th>
                <th><%= t('.fields.stream_views.heading') %></th>
                <th><%= t('.fields.chat_messages.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/analytics/daily_snapshots/daily_snapshot', collection: daily_snapshots %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == team %>
            <% if can? :create, Analytics::DailySnapshot.new(team: team) %>
              <%= link_to t('.buttons.new'), [:new, :account, team, :analytics_daily_snapshot], class: "#{first_button_primary(:analytics_daily_snapshot)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if daily_snapshots.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:analytics_daily_snapshot)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
