<%= form_with(model: [:account, creator_profile], local: true) do |form| %>
  <% if creator_profile.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-4">
      <h2 class="font-bold mb-2"><%= pluralize(creator_profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul class="list-disc list-inside">
        <% creator_profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :display_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :display_name, 
          class: "form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500",
          placeholder: "Your creator name" %>
      <p class="mt-1 text-sm text-gray-500">This is how you'll appear to your fans</p>
    </div>

    <div>
      <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :bio, rows: 4,
          class: "form-textarea block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500",
          placeholder: "Tell your audience about yourself..." %>
      <p class="mt-1 text-sm text-gray-500">A brief description of who you are and what you create</p>
    </div>

    <div>
      <%= form.label :category, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :category, 
          options_for_select([
            ['Music', 'music'],
            ['Art', 'art'],
            ['Gaming', 'gaming'],
            ['Education', 'education'],
            ['Fitness', 'fitness'],
            ['Cooking', 'cooking'],
            ['Technology', 'technology'],
            ['Lifestyle', 'lifestyle'],
            ['Other', 'other']
          ], creator_profile.category),
          { prompt: 'Select a category' },
          class: "form-select block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
    </div>

    <div>
      <%= form.label :website_url, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :website_url,
          class: "form-input block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500",
          placeholder: "https://example.com" %>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <%= form.label :twitter_handle, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative rounded-md shadow-sm">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <span class="text-gray-500 sm:text-sm">@</span>
          </div>
          <%= form.text_field :twitter_handle,
              class: "form-input block w-full rounded-md border-gray-300 pl-7 focus:border-purple-500 focus:ring-purple-500",
              placeholder: "username" %>
        </div>
      </div>

      <div>
        <%= form.label :instagram_handle, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative rounded-md shadow-sm">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <span class="text-gray-500 sm:text-sm">@</span>
          </div>
          <%= form.text_field :instagram_handle,
              class: "form-input block w-full rounded-md border-gray-300 pl-7 focus:border-purple-500 focus:ring-purple-500",
              placeholder: "username" %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :stripe_account_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <% if creator_profile.stripe_account_id.present? %>
        <p class="text-sm text-green-600 mb-2">
          <svg class="inline-block h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Stripe account connected
        </p>
      <% else %>
        <p class="text-sm text-gray-600 mb-2">
          Connect your Stripe account to receive payments from your fans.
        </p>
        <%= link_to "Connect Stripe Account", "#", class: "btn btn-secondary" %>
      <% end %>
    </div>

    <div class="flex items-center">
      <%= form.check_box :verified, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
      <%= form.label :verified, "Request Verification", class: "ml-2 block text-sm text-gray-700" %>
      <p class="ml-auto text-xs text-gray-500">Verification adds trust for your fans</p>
    </div>
  </div>

  <div class="mt-8 border-t pt-5">
    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", account_creator_profiles_path, class: "btn btn-secondary" %>
      <%= form.submit "Save Profile", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>