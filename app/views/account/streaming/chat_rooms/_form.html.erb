<% cancel_path ||= chat_room.persisted? ? [:account, chat_room] : [:account, @stream, :streaming_chat_rooms] %>

<%= form_with model: chat_room, url: (chat_room.persisted? ? [:account, chat_room] : [:account, @stream, :streaming_chat_rooms]), class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :stream_id, options: {autofocus: true} %>
      <%= render 'shared/fields/text_field', method: :channel_id %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
