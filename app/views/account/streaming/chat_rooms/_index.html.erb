<% chat_rooms = chat_rooms.accessible_by(current_ability) %>
<% stream = @stream %>
<% context ||= stream %>
<% collection ||= :streaming_chat_rooms %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, chat_rooms = pagy(chat_rooms, page_param: :chat_rooms_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless chat_rooms.any?}") %>
        <%= render "shared/limits/index", model: chat_rooms.model %>
      <% end %>

      <% box.table do %>
        <% if chat_rooms.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.stream_id.heading') %></th>
                <th><%= t('.fields.channel_id.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/streaming/chat_rooms/chat_room', collection: chat_rooms %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == stream %>
            <% if can? :create, Streaming::ChatRoom.new(stream: stream) %>
              <%= link_to t('.buttons.new'), [:new, :account, stream, :streaming_chat_room], class: "#{first_button_primary(:streaming_chat_room)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if chat_rooms.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:streaming_chat_room)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
