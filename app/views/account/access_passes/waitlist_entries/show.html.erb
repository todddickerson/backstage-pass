<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @waitlist_entry do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @waitlist_entry %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @waitlist_entry, strategy: :label do %>
            <%= render 'shared/attributes/email', attribute: :email %>
            <%= render 'shared/attributes/text', attribute: :first_name %>
            <%= render 'shared/attributes/text', attribute: :last_name %>
            <%= render 'shared/attributes/text', attribute: :answers %>
            <%= render 'shared/attributes/option', attribute: :status %>
            <%= render 'shared/attributes/text', attribute: :notes %>
            <%= render 'shared/attributes/date_and_time', attribute: :approved_at %>
            <%= render 'shared/attributes/date_and_time', attribute: :rejected_at %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <% if @waitlist_entry.pending? && can?(:manage, @waitlist_entry) %>
            <%= button_to t('.buttons.approve'), [:approve, :account, @waitlist_entry], method: :post, class: "btn btn-success", data: { turbo_confirm: t('.buttons.confirmations.approve') } %>
            <%= button_to t('.buttons.reject'), [:reject, :account, @waitlist_entry], method: :post, class: "btn btn-danger", data: { turbo_confirm: t('.buttons.confirmations.reject') } %>
          <% end %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @waitlist_entry], class: first_button_primary if can? :edit, @waitlist_entry %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @waitlist_entry], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@waitlist_entry)) } if can? :destroy, @waitlist_entry %>
          <%= link_to t('global.buttons.back'), [:account, @access_pass, :waitlist_entries], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
