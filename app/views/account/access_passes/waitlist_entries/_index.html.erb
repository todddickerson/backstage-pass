<% waitlist_entries = waitlist_entries.accessible_by(current_ability) %>
<% access_pass = @access_pass %>
<% context ||= access_pass %>
<% collection ||= :waitlist_entries %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, waitlist_entries = pagy(waitlist_entries, page_param: :waitlist_entries_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless waitlist_entries.any?}") %>
        <%= render "shared/limits/index", model: waitlist_entries.model %>
      <% end %>

      <% box.table do %>
        <% if waitlist_entries.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.email.heading') %></th>
                <th><%= t('.fields.first_name.heading') %></th>
                <th><%= t('.fields.last_name.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/access_passes/waitlist_entries/waitlist_entry', collection: waitlist_entries %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == access_pass %>
            <% if can? :create, AccessPasses::WaitlistEntry.new(access_pass: access_pass) %>
              <%= link_to t('.buttons.new'), [:new, :account, access_pass, :waitlist_entry], class: "#{first_button_primary(:waitlist_entry)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if waitlist_entries.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:waitlist_entry)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
