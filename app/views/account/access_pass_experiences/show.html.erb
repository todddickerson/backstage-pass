<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @access_pass_experience do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @access_pass_experience %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @access_pass_experience, strategy: :label do %>
            <%= render 'shared/attributes/option', attribute: :experience %>
            <%= render 'shared/attributes/option', attribute: :included %>
            <%= render 'shared/attributes/number', attribute: :position %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @access_pass_experience], class: first_button_primary if can? :edit, @access_pass_experience %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @access_pass_experience], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@access_pass_experience)) } if can? :destroy, @access_pass_experience %>
          <%= link_to t('global.buttons.back'), [:account, @access_pass, :access_pass_experiences], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
