<% space = @space || @space %>
<% context ||= space %>
<% collection ||= :experiences %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: experience do %>
  <tr data-id="<%= experience.id %>">
    <%= render "shared/tables/checkbox", object: experience %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, experience] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, experience %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, experience], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, experience %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, experience], method: :delete, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(experience)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
