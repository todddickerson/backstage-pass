<% experience = @experience || @experience %>
<% context ||= experience %>
<% collection ||= :streams %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: stream do %>
  <tr data-id="<%= stream.id %>">
    <%= render "shared/tables/checkbox", object: stream %>
    <td>
      <!-- Status Badge -->
      <% if stream.live? %>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 mr-2">
          üî¥ Live
        </span>
      <% elsif stream.scheduled? %>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mr-2">
          ‚è∫ Scheduled
        </span>
      <% else %>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 mr-2">
          ‚èπ Ended
        </span>
      <% end %>
      <%= render 'shared/attributes/text', attribute: :title, url: [:account, stream] %>
    </td>
    <%# üöÖ super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, stream %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, stream], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, stream %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, stream], method: :delete, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(stream)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# üöÖ super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
