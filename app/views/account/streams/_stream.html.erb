<% experience = @experience || @experience %>
<% context ||= experience %>
<% collection ||= :streams %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: stream do %>
  <tr data-id="<%= stream.id %>">
    <%= render "shared/tables/checkbox", object: stream %>
    <td><%= render 'shared/attributes/text', attribute: :title, url: [:account, stream] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, stream %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, stream], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, stream %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, stream], method: :delete, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(stream)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
