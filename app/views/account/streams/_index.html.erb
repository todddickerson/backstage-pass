<% streams = streams.accessible_by(current_ability) %>
<% experience = @experience %>
<% context ||= experience %>
<% collection ||= :streams %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, streams = pagy(streams, page_param: :streams_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless streams.any?}") %>
        <%= render "shared/limits/index", model: streams.model %>
      <% end %>

      <% box.table do %>
        <% if streams.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.title.heading') %></th>
                <%# ğŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/streams/stream', collection: streams %>
            </tbody>
          </table>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-12 px-4">
            <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No streams yet</h3>
            <p class="text-sm text-gray-500 mb-6 max-w-sm mx-auto">
              Get started by creating your first stream. Schedule it for later or go live immediately!
            </p>
            <% if can? :create, Stream.new(experience: experience) %>
              <%= link_to [:new, :account, experience, :stream],
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create Your First Stream
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == experience %>
            <% if can? :create, Stream.new(experience: experience) %>
              <%= link_to t('.buttons.new'), [:new, :account, experience, :stream], class: "#{first_button_primary(:stream)} new" %>
            <% end %>
          <% end %>

          <%# ğŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ğŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if streams.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:stream)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ğŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
