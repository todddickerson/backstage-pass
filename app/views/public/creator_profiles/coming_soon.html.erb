<div class="max-w-2xl mx-auto py-16 px-4 text-center">
  <div class="mb-8">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 rounded-full mb-6">
      <%= icon "ti ti-user-star", class: "w-10 h-10 text-gray-400" %>
    </div>
    
    <h1 class="text-4xl font-bold text-gray-900 mb-4">
      @<%= @creator_profile.username %>
    </h1>
    
    <div class="prose prose-lg text-gray-600 max-w-none">
      <% if @creator_profile.display_name.present? %>
        <h2 class="text-2xl font-semibold text-gray-800 mb-2">
          <%= @creator_profile.display_name %>
        </h2>
      <% end %>
      
      <% if @creator_profile.bio.present? %>
        <div class="mb-6">
          <%= @creator_profile.bio %>
        </div>
      <% end %>
      
      <% if @creator_profile.website_url.present? %>
        <p class="mb-6">
          <%= link_to @creator_profile.website_url, @creator_profile.website_url, target: "_blank", 
                      class: "text-blue-600 hover:text-blue-800 underline" %>
        </p>
      <% end %>
    </div>
  </div>
  
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
    <div class="flex items-center justify-center mb-3">
      <%= icon "ti ti-clock", class: "w-6 h-6 text-yellow-600 mr-2" %>
      <h3 class="text-lg font-semibold text-yellow-800">Coming Soon!</h3>
    </div>
    
    <p class="text-yellow-700">
      <%= @creator_profile.display_name || @creator_profile.username %> is setting up their creator space. 
      Check back soon for exclusive content and experiences!
    </p>
  </div>
  
  <div class="space-y-4">
    <%= link_to "Explore Other Creators", spaces_path, 
                class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
  </div>
</div>