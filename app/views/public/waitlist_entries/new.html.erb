<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Join the Waitlist</h1>
      <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-700"><%= @access_pass.name %></h2>
        <p class="text-lg text-gray-600">
          in <%= link_to @space.name, public_space_path(@space.slug), 
                  class: "text-blue-600 hover:text-blue-800 underline" %>
        </p>
      </div>
      
      <% if @access_pass.description.present? %>
        <div class="prose max-w-none text-gray-600 mb-6">
          <%= @access_pass.description %>
        </div>
      <% end %>
    </div>

    <!-- Waitlist Form -->
    <div class="bg-white rounded-lg shadow-lg p-8">
      <%= form_with model: [@space, @access_pass, @waitlist_entry], 
                    url: waitlist_entries_path(@space.slug, @access_pass.slug),
                    local: true, 
                    class: "space-y-6" do |form| %>
        
        <% if @waitlist_entry.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            </div>
            <ul class="mt-2 text-sm text-red-700">
              <% @waitlist_entry.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Basic Information -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :first_name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Your first name" %>
          </div>

          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :last_name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Your last name" %>
          </div>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "your.email@example.com" %>
          <p class="mt-1 text-sm text-gray-500">We'll use this to contact you when you're approved.</p>
        </div>

        <!-- Custom Questions -->
        <% if @custom_questions.any? %>
          <div class="border-t pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Additional Information</h3>
            <div class="space-y-4" id="custom-questions" 
                 data-controller="custom-questions" 
                 data-custom-questions-value="<%= @custom_questions.to_json %>">
              
              <% @custom_questions.each_with_index do |question, index| %>
                <div class="question-container" data-question-id="<%= question['id'] %>">
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= question['text'] %>
                    <% if question['required'] %>
                      <span class="text-red-500">*</span>
                    <% end %>
                  </label>

                  <% case question['type'] %>
                  <% when 'text' %>
                    <input type="text" 
                           name="access_passes_waitlist_entry[answers][<%= question['id'] %>]" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           <%= 'required' if question['required'] %>>
                  
                  <% when 'textarea' %>
                    <textarea name="access_passes_waitlist_entry[answers][<%= question['id'] %>]" 
                              rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                              <%= 'required' if question['required'] %>></textarea>
                  
                  <% when 'select' %>
                    <select name="access_passes_waitlist_entry[answers][<%= question['id'] %>]"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            <%= 'required' if question['required'] %>>
                      <option value="">Select an option...</option>
                      <% (question['options'] || []).each do |option| %>
                        <option value="<%= option %>"><%= option %></option>
                      <% end %>
                    </select>

                  <% else %>
                    <input type="text" 
                           name="access_passes_waitlist_entry[answers][<%= question['id'] %>]" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           <%= 'required' if question['required'] %>>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Hidden field to encode answers as JSON -->
        <%= form.hidden_field :answers, value: "", id: "answers_json" %>

        <!-- Submit Button -->
        <div class="pt-6">
          <%= form.submit "Join Waitlist", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>

    <!-- Back Link -->
    <div class="mt-8 text-center">
      <%= link_to "← Back to #{@access_pass.name}", 
          public_space_access_pass_path(@space.slug, @access_pass.slug), 
          class: "text-blue-600 hover:text-blue-800 underline" %>
    </div>
  </div>
</div>

<script>
  // Collect custom question answers into JSON field before form submission
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const answersField = document.getElementById('answers_json');
    
    if (form && answersField) {
      form.addEventListener('submit', function(e) {
        const answers = {};
        const questionContainers = document.querySelectorAll('.question-container');
        
        questionContainers.forEach(container => {
          const questionId = container.dataset.questionId;
          const input = container.querySelector('input, textarea, select');
          
          if (input && questionId) {
            answers[questionId] = input.value;
          }
        });
        
        answersField.value = JSON.stringify(answers);
      });
    }
  });
</script>