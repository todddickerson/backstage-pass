<% content_for :page_title, @space.name %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Space Header -->
    <div class="px-6 py-8 border-b border-gray-200">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @space.name %></h1>
      <p class="text-gray-600 text-lg"><%= @space.description %></p>
      
      <div class="mt-4 flex items-center space-x-6 text-sm text-gray-500">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12a3 3 0 100-6 3 3 0 000 6zm8.5-8a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
          </svg>
          <%= pluralize(@total_members, 'member') %>
        </span>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
          </svg>
          by <%= @space.team.name %>
        </span>
      </div>
    </div>

    <!-- Experiences Section -->
    <% if @experiences&.any? %>
      <div class="px-6 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Available Experiences</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @experiences.each do |experience| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
              <h3 class="font-medium text-gray-900 mb-2"><%= experience.name %></h3>
              <p class="text-gray-600 text-sm mb-3">
                <%= truncate(experience.description.to_plain_text, length: 100) if experience.description.present? %>
              </p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500"><%= experience.experience_type.humanize %></span>
                <span class="font-medium text-green-600"><%= experience.price_display %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>No experiences available yet. Check back soon!</p>
      </div>
    <% end %>

    <!-- Call to Action -->
    <div class="px-6 py-6 bg-gray-50 border-t border-gray-200">
      <div class="text-center">
        <% if user_signed_in? %>
          <%= link_to "View Dashboard", account_dashboard_path, 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
        <% else %>
          <%= link_to "Sign Up to Join", new_user_registration_path, 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors mr-3" %>
          <%= link_to "Sign In", new_user_session_path, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</div>