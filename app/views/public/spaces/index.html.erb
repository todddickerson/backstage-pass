<%= render 'shared/public/page' do %>
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl">Discover Amazing Creators</h1>
      <p class="mt-3 text-xl text-gray-600">Exclusive content, live streams, and communities from your favorite creators</p>
    </div>

    <!-- Search and Filters -->
    <div class="mb-8 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <%= form_with url: explore_spaces_path, method: :get, local: true, class: "space-y-4 sm:space-y-0 sm:flex sm:items-end sm:space-x-4" do |f| %>
        <!-- Search -->
        <div class="flex-1">
          <%= f.text_field :search, 
              value: params[:search],
              placeholder: "Search spaces...",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
        </div>

        <!-- Sort -->
        <div class="sm:w-48">
          <%= f.select :sort_by,
              options_for_select([
                ['Newest First', 'newest'],
                ['Most Popular', 'popular'],
                ['Price: Low to High', 'price_low'],
                ['Price: High to Low', 'price_high'],
                ['Name A-Z', 'name']
              ], params[:sort_by]),
              { prompt: 'Sort by...' },
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
        </div>

        <!-- Price Range -->
        <div class="flex space-x-2">
          <%= f.number_field :min_price,
              value: params[:min_price],
              placeholder: "Min $",
              step: 0.01,
              min: 0,
              class: "w-24 rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
          <span class="self-center text-gray-500">-</span>
          <%= f.number_field :max_price,
              value: params[:max_price],
              placeholder: "Max $",
              step: 0.01,
              min: 0,
              class: "w-24 rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
        </div>

        <!-- Submit -->
        <div>
          <%= f.submit "Filter", class: "btn btn-primary" %>
          <% if params[:search].present? || params[:sort_by].present? || params[:min_price].present? || params[:max_price].present? %>
            <%= link_to "Clear", explore_spaces_path, class: "ml-2 btn btn-secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Results Count -->
    <% if @spaces.any? %>
      <div class="mb-4 text-sm text-gray-600">
        Found <%= pluralize(@spaces.count, 'space') %>
        <% if params[:search].present? %>
          matching "<%= params[:search] %>"
        <% end %>
      </div>
    <% end %>

    <!-- Spaces Grid -->
    <% if @spaces.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @spaces.each do |space| %>
          <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
            <%= link_to public_space_path(space.slug), class: "block" do %>
              <!-- Space Image/Avatar -->
              <% if space.respond_to?(:avatar_image_url) && space.avatar_image_url.present? %>
                <div class="h-48 bg-gray-200">
                  <%= image_tag space.avatar_image_url, class: "w-full h-full object-cover", alt: space.name %>
                </div>
              <% else %>
                <div class="h-48 bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                  <span class="text-white text-4xl font-bold"><%= space.name.first.upcase %></span>
                </div>
              <% end %>
              
              <div class="p-6">
                <!-- Live Now Indicator (if any live streams) -->
                <% if space.experiences.any? { |e| e.streams.live.any? } %>
                  <div class="mb-3 inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                    <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse mr-1.5"></div>
                    LIVE NOW
                  </div>
                <% end %>

                <!-- Space Name & Description -->
                <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= space.name %></h3>

                <% if space.description.present? %>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                    <%= truncate(strip_tags(space.description.to_s), length: 100) %>
                  </p>
                <% end %>

                <!-- Access Pass Pricing -->
                <% if space.access_passes.published.any? %>
                  <div class="mb-4 p-3 bg-purple-50 rounded-md">
                    <p class="text-xs text-purple-700 font-semibold uppercase tracking-wide mb-1">Access Passes</p>
                    <div class="space-y-1">
                      <% space.access_passes.published.limit(2).each do |pass| %>
                        <div class="flex justify-between items-center">
                          <span class="text-sm text-gray-700 truncate flex-1 mr-2"><%= pass.name %></span>
                          <span class="text-sm font-semibold text-purple-600">
                            <% if pass.pricing_type == 'free' || pass.price_cents == 0 %>
                              FREE
                            <% else %>
                              $<%= (pass.price_cents / 100.0).round(2) %>
                              <% if pass.pricing_type == 'monthly' %>
                                <span class="text-xs">/mo</span>
                              <% elsif pass.pricing_type == 'yearly' %>
                                <span class="text-xs">/yr</span>
                              <% end %>
                            <% end %>
                          </span>
                        </div>
                      <% end %>
                      <% if space.access_passes.published.count > 2 %>
                        <p class="text-xs text-purple-600 mt-1">
                          +<%= space.access_passes.published.count - 2 %> more
                        </p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <!-- Stats -->
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <!-- Members Count -->
                    <span class="flex items-center" title="Active Members">
                      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                      </svg>
                      <%= space.active_passes_count %>
                    </span>
                    
                    <!-- Experiences Count -->
                    <% if space.experiences_count > 0 %>
                      <span class="flex items-center" title="Experiences">
                        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        <%= space.experiences_count %>
                      </span>
                    <% end %>
                    
                    <!-- Revenue Badge -->
                    <% if space.total_revenue_cents && space.total_revenue_cents > 0 %>
                      <span class="text-xs px-2 py-1 bg-green-100 text-green-700 rounded-full">
                        Verified
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Next Stream (if any) -->
                <% if defined?(space.experiences) && space.experiences.any? %>
                  <% next_stream = space.experiences.joins(:streams).where('streams.scheduled_at > ?', Time.current).order('streams.scheduled_at').first&.streams&.first %>
                  <% if next_stream %>
                    <div class="mt-4 pt-4 border-t border-gray-200">
                      <p class="text-xs text-gray-500 mb-1">Next live stream:</p>
                      <p class="text-sm font-medium text-purple-600">
                        <%= next_stream.scheduled_at.strftime("%b %d at %l:%M %p %Z") %>
                      </p>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- No Results -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        
        <% if params[:search].present? || params[:min_price].present? || params[:max_price].present? %>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No spaces found</h3>
          <p class="mt-1 text-sm text-gray-500">Try adjusting your filters or search terms.</p>
          <div class="mt-6">
            <%= link_to "Clear Filters", explore_spaces_path, class: "btn btn-secondary" %>
          </div>
        <% else %>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No creator spaces yet</h3>
          <p class="mt-1 text-sm text-gray-500">Be the first to create your space!</p>
          <% if user_signed_in? %>
            <div class="mt-6">
              <%= link_to "Create Your Space", account_dashboard_path, class: "btn btn-primary" %>
            </div>
          <% else %>
            <div class="mt-6">
              <%= link_to "Sign Up as Creator", new_user_registration_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>