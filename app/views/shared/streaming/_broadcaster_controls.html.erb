<%# Professional Broadcaster Control Panel - Best-in-class LiveKit integration %>
<% stream ||= @stream %>
<% user ||= current_user %>
<% can_broadcast = stream.can_broadcast?(user) %>

<div class="fixed bottom-0 left-0 right-0 z-40 bg-gray-900 border-t border-gray-700" data-controller="broadcaster-controls">
  <div class="max-w-7xl mx-auto px-4 py-4">
    <!-- Main Control Bar -->
    <div class="flex items-center justify-between">
      
      <!-- Left: Media Controls -->
      <div class="flex items-center space-x-4">
        <% if can_broadcast %>
          <!-- Camera Toggle -->
          <button
            data-action="click->broadcaster-controls#toggleCamera"
            data-broadcaster-controls-target="cameraBtn"
            class="group relative p-3 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
            title="Toggle Camera (C)"
          >
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            <span class="absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full hidden" data-broadcaster-controls-target="cameraStatus"></span>
          </button>

          <!-- Microphone Toggle -->
          <button
            data-action="click->broadcaster-controls#toggleMicrophone"
            class="group relative p-3 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
            title="Toggle Microphone (M)"
          >
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
            </svg>
            <span class="absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full hidden" data-broadcaster-controls-target="micStatus"></span>
          </button>

          <!-- Screen Share -->
          <button
            data-action="click->broadcaster-controls#toggleScreenShare"
            class="group relative p-3 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
            title="Share Screen (S)"
          >
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="absolute -top-1 -right-1 w-3 h-3 bg-blue-500 rounded-full hidden" data-broadcaster-controls-target="screenStatus"></span>
          </button>
        <% else %>
          <p class="text-sm text-gray-400">Viewer Mode</p>
        <% end %>
      </div>

      <!-- Center: Stream Status -->
      <div class="flex-1 text-center">
        <div class="inline-flex items-center space-x-3 px-4 py-2 bg-red-900 bg-opacity-50 rounded-full">
          <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
          <span class="text-white font-semibold">LIVE</span>
          <span class="text-gray-300" data-broadcaster-controls-target="duration">00:00</span>
          <span class="text-gray-400">â€¢</span>
          <span class="text-gray-300" data-broadcaster-controls-target="viewerCount">0 viewers</span>
        </div>
      </div>

      <!-- Right: System Controls -->
      <div class="flex items-center space-x-4">
        <!-- Fullscreen -->
        <button
          data-action="click->broadcaster-controls#toggleFullscreen"
          class="p-3 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
          title="Fullscreen (F)"
        >
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
