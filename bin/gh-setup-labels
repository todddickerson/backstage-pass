#!/bin/bash
# Set up GitHub labels for the project

echo "ðŸ·ï¸  Setting up GitHub labels for Backstage Pass..."
echo "================================================"

# Check if gh is installed and authenticated
if ! command -v gh &> /dev/null; then
    echo "âŒ GitHub CLI not installed. Run: brew install gh"
    exit 1
fi

if ! gh auth status &> /dev/null; then
    echo "âŒ Not authenticated. Run: gh auth login"
    exit 1
fi

echo "Creating AI workflow labels..."

# AI Workflow Labels
