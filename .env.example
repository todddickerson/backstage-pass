# Backstage Pass Production Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# CORE RAILS CONFIGURATION
# ============================================
RAILS_MASTER_KEY=your-master-key-from-config-master-key-file
SECRET_KEY_BASE=generate-with-rails-secret
BASE_URL=https://backstagepass.app
APPLICATION_HOST=backstagepass.app
RAILS_ENV=production

# Database (usually auto-provided by host)
DATABASE_URL=postgresql://user:password@localhost:5432/backstage_pass_production
REDIS_URL=redis://localhost:6379/0

# ============================================
# LIVEKIT - Video Streaming
# ============================================
# Get from: https://livekit.io (create project)
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_HOST=wss://your-project.livekit.cloud

# ============================================
# MUX - Video Processing
# ============================================
# Get from: https://dashboard.mux.com/settings/access-tokens
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=

# ============================================
# GETSTREAM.IO - Chat
# ============================================
# Get from: https://getstream.io/dashboard
GETSTREAM_API_KEY=
GETSTREAM_API_SECRET=
GETSTREAM_APP_ID=

# ============================================
# STRIPE - Payments
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_live_
STRIPE_SECRET_KEY=sk_live_
STRIPE_CLIENT_ID=ca_
STRIPE_WEBHOOK_SECRET=whsec_

# ============================================
# EMAIL SERVICE (Choose One)
# ============================================

# Option 1: SendGrid
SENDGRID_API_KEY=SG.
SENDGRID_DOMAIN=backstagepass.app

# Option 2: Postmark
# POSTMARK_API_TOKEN=

# ============================================
# FILE STORAGE (Choose One)
# ============================================

# Option 1: AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=backstagepass-production

# Option 2: Cloudflare R2 (Recommended)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET=backstagepass-production
CLOUDFLARE_R2_ENDPOINT=

# ============================================
# ERROR TRACKING (Choose One)
# ============================================

# Option 1: Honeybadger
HONEYBADGER_API_KEY=hbp_

# Option 2: Sentry
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================
# APPLICATION MONITORING (Optional)
# ============================================

# Option 1: New Relic
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=backstage-pass-production

# Option 2: Scout
# SCOUT_KEY=
# SCOUT_NAME=backstage-pass-production

# ============================================
# DATABASE ENCRYPTION (Generate with: rails db:encryption:init)
# ============================================
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=

# ============================================
# OPTIONAL - PHASE 2
# ============================================

# Push Notifications - Firebase (Android)
# FIREBASE_SERVER_KEY=

# Push Notifications - Apple (iOS)
# APNS_PEM_PATH=/path/to/certificate.pem
# APNS_ENVIRONMENT=production

# ============================================
# DEVELOPMENT/TEST ONLY (Remove in Production)
# ============================================
# MAGIC_TEST=false
# CAPYBARA_ARTIFACTS_PATH=
# KNAPSACK_PRO_CI_NODE_INDEX=