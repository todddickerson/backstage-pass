# Kamal 2 Secrets Configuration
# Copy this file to .kamal/secrets and fill in your actual values
# NEVER commit this file to version control!

# Docker Registry
KAMAL_REGISTRY_PASSWORD=your-docker-hub-password

# Rails
RAILS_MASTER_KEY=$(cat config/master.key)
SECRET_KEY_BASE=$(rails secret)

# Database
DATABASE_URL=postgresql://backstage_pass:password@postgres:5432/backstage_pass_production
POSTGRES_PASSWORD=strong-postgres-password

# Redis
REDIS_URL=redis://redis:6379/0

# LiveKit (Real-time video)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_HOST=wss://your-project.livekit.cloud

# Mux (Video processing)
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# GetStream (Chat)
GETSTREAM_API_KEY=your-getstream-api-key
GETSTREAM_API_SECRET=your-getstream-api-secret

# Stripe (Payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your-key
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Error Tracking (Honeybadger)
HONEYBADGER_API_KEY=hbp_your-honeybadger-key

# Database Encryption (generate with: rails db:encryption:init)
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=

# GitHub Token (if using GitHub Container Registry)
# GITHUB_TOKEN=ghp_your-github-token